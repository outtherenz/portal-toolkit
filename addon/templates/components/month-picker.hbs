{{#unless compact}}
  <button class='subdued' {{action 'prevYear'}}>«</button>
  <button class='subdued' {{action 'prevMonth'}}>‹</button>

  <div class="inputs">
    {{#x-select value=selectedMonth action=(action (mut selectedMonth)) class=(if dark 'select-box select-box--dark month' 'select-box month') as |xs|}}
      {{#xs.option value="01"}}January{{/xs.option}}
      {{#xs.option value="02"}}February{{/xs.option}}
      {{#xs.option value="03"}}March{{/xs.option}}
      {{#xs.option value="04"}}April{{/xs.option}}
      {{#xs.option value="05"}}May{{/xs.option}}
      {{#xs.option value="06"}}June{{/xs.option}}
      {{#xs.option value="07"}}July{{/xs.option}}
      {{#xs.option value="08"}}August{{/xs.option}}
      {{#xs.option value="09"}}September{{/xs.option}}
      {{#xs.option value="10"}}October{{/xs.option}}
      {{#xs.option value="11"}}November{{/xs.option}}
      {{#xs.option value="12"}}December{{/xs.option}}
    {{/x-select}}

    {{#x-select value=selectedYear action=(action (mut selectedYear)) class=(if dark 'select-box select-box--dark year' 'select-box year') as |xs|}}
      {{#each yearList as |year|}}
        {{#xs.option value=year}}{{year}}{{/xs.option}}
      {{/each}}
    {{/x-select}}
  </div>

  <button class='subdued' {{action 'nextMonth'}}>›</button>
  <button class='subdued' {{action 'nextYear'}}>»</button>
{{else}}
  <label class="month-picker__input-label" for="month-picker__input">
    <span class="month-picker__display">
      <span class="month-picker__month">{{moment-format period 'MMM' 'YYYY-MM'}}</span>
      <span class="month-picker__year">{{moment-format period 'YYYY' 'YYYY-MM'}}</span>
    </span>
    {{fa-icon 'calendar'}}
  </label>

  {{input type="month" value=period class="month-picker__input" id="month-picker__input"}}
{{/unless}}
